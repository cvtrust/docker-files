{
  "name": "cvtrust/docker-files",
  "description": "Make sure our docker files work",
  "type": "project",
  "license": "BSD-3-Clause",
  "keywords": [
  ],
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-posix": "*",
    "doctrine/dbal": "^4.0",
    "illuminate/support": "^11.11",
    "monolog/monolog": "^3.6",
    "nesbot/carbon": "^3.6"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.5",
    "nikic/php-parser": "^5.0",
    "phpunit/phpunit": "^11.2",
    "roave/security-advisories": "dev-latest"
  },
  "autoload-dev" : {
    "psr-4" : {
      "CVTrustTest\\DockerFiles\\": "tests/"
    },
    "files": [
    ]
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
